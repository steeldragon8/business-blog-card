---
import { Image } from 'astro:assets';
import overlay from '../assets/white-overlay.svg'
import { imageMetadata } from 'astro/assets/utils';

interface Props {
	image: string;
	title: string;
	body: string;
	href: string;
	name: string;
	occupation: string;
	avatar: string;
}

const { image, href, title, body, name, occupation, avatar } = Astro.props;
---

<article class="w-3/5 md:w-1/3 bg-white rounded-xl shadow-sm overflow-hidden">
	<a href={href}>		
		<div class="relative">
			<Image src={image} alt={title} class='' />
			<Image src={overlay} alt='' class='absolute left-0 -bottom-[1px] right-0 w-full' />
		</div>

		<div class="flex flex-col gap-4 px-8">
			<h2 class="font-poppins text-2xl font-medium text-primary">
				{title}
			</h2>
			<p class="font-lato text-secondary">
				{body}
			</p>
		</div>

		<div class="flex items-center gap-4 border-t mt-8 py-7 px-8">
			<Image src={avatar} alt={name} class='size-9 rounded-full' />

			<div>
				<h3 class="font-poppins text-sm font-medium text-primary">
					{name}
				</h3>
				<p class="font-lato text-xs text-secondary">
					{occupation}
				</p>
			</div>
		</div>
	</a>
</article>
